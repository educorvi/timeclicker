{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": [
    "env.d.ts",
    "src/**/*.ts",
    "src/**/*.vue",
    "components.d.ts"
  ],
  "compilerOptions": {
    "rootDir": "src",
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "allowJs": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "types": [
      "unplugin-icons/types/vue"
    ]
  },
  "references": [
    {
      "path": "./tsconfig.config.json"
    }
  ]
}
